<AppHeader @title="Course Details" @showBack={{true}}/>

<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-start mb-3">
    <h3 class="fw-bold">
      {{course.name}}
    </h3>

    {{#if this.isAdmin}}
      <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary btn-sm" {{action "goToEdit"}}>
          Edit
        </button>

        <button class="btn btn-danger btn-sm" {{action send "openDeletePopup"}}>
          Delete
        </button>

      </div>
    {{/if}}
  </div>

  <p class="text-muted mb-4">
    {{course.description}}
  </p>

  <h5 class="mb-3">Contents</h5>

  {{#if course.contents}}
    <ul class="list-group mb-4">
      {{#each-in course.contents as |id content|}}
        <li class="list-group-item d-flex justify-content-between align-items-start">
          {{#if content.videoUrl}}
            <a href={{content.videoUrl}} target="_blank" rel="noopener" class="fw-semibold text-decoration-none d-inline-block">
              {{content.title}}
            </a>
          {{else}}
            <span class="fw-semibold">
              {{content.title}}
            </span>
          {{/if}}

          {{#if content.description}}
            <div class="text-muted small mt-1">
              {{content.description}}
            </div>
          {{/if}}

        </li>
      {{/each-in}}
    </ul>
  {{else}}
    <p class="text-muted">No contents available.</p>
  {{/if}}

  {{#if this.isAdmin}}
    <h5 class="mb-3">Members</h5>

    {{#if course.members.length}}
      <div class="table-responsive mb-4">
        <table class="table table-bordered table-striped">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Register No</th>
              <th>Department</th>
            </tr>
          </thead>
          <tbody>
            {{#each course.members as |m index|}}
              <tr>
                <td>{{inc index}}</td>
                <td>{{m.name}}</td>
                <td>{{m.registerNumber}}</td>
                <td>{{m.department}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <p class="text-muted">No members enrolled.</p>
    {{/if}}
  {{/if}}

  <h5 class="mb-3">Admins</h5>

  {{#if course.admins.length}}
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Register No</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          {{#each course.admins as |a index|}}
            <tr>
              <td>{{inc index}}</td>
              <td>{{a.name}}</td>
              <td>{{a.registerNumber}}</td>
              <td>{{a.department}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class="text-muted">No admins assigned.</p>
  {{/if}}

</div>
{{#if this.showDeleteConfirm}}
  <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title text-danger">Delete Course</h5>
          <button class="btn-close" {{action "closeDeletePopup"}}></button>
        </div>

        <div class="modal-body">
          <p>
            Are you sure you want to permanently delete
            <strong>{{this.course.name}}</strong>?
          </p>
          <p class="text-muted small mb-0">
            This action cannot be undone.
          </p>
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary"
                  {{action "closeDeletePopup"}}>
            Cancel
          </button>
          <button class="btn btn-danger"
                  disabled={{this.isDeleting}}
                  {{action "confirmDelete"}}>
            {{if this.isDeleting "Deleting..." "Delete"}}
          </button>
        </div>

      </div>
    </div>
  </div>
{{/if}}

{{#if this.showDeleteSuccess}}
  <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered modal-sm">
      <div class="modal-content text-center">

        <div class="modal-body">
          <h5 class="text-success mb-2">Course Deleted</h5>
          <p class="mb-0 text-muted">
            Redirecting to dashboardâ€¦
          </p>
        </div>

      </div>
    </div>
  </div>
{{/if}}
