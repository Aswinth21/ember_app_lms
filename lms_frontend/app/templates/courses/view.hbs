<AppHeader @title="Course Details" @showBack={{true}}/>

<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-start mb-3">
    <h3 class="fw-bold">
      {{course.name}}
    </h3>

    {{#if this.isAdmin}}
      <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary btn-sm" {{action "goToEdit"}}>
          Edit
        </button>

        <button class="btn btn-outline-danger btn-sm" {{action "deleteCourse"}}>
          Delete
        </button>
      </div>
    {{/if}}
  </div>

  <p class="text-muted mb-4">
    {{course.description}}
  </p>

  <h5 class="mb-3">Contents</h5>

  {{#if course.contents}}
    <ul class="list-group mb-4">
      {{#each-in course.contents as |id content|}}
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div>
            <strong>{{content.title}}</strong>
            {{#if content.description}}
              <div class="text-muted small">
                {{content.description}}
              </div>
            {{/if}}
          </div>

          {{#if content.videoUrl}}
            <a
              href="{{content.videoUrl}}"
              target="_blank"
              class="btn btn-sm btn-outline-primary"
            >
              GO TO
            </a>
          {{/if}}
        </li>
      {{/each-in}}
    </ul>
  {{else}}
    <p class="text-muted">No contents available.</p>
  {{/if}}

  {{#unless this.isMember}}
    {{#unless this.isAdmin}}
      <button class="btn btn-success mb-4" {{action "enroll"}}>
        Enroll
      </button>
    {{/unless}}
  {{/unless}}

  <h5 class="mb-3">Members</h5>

  {{#if course.members.length}}
    <div class="table-responsive mb-4">
      <table class="table table-bordered table-striped">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Register No</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          {{#each course.members as |m index|}}
            <tr>
              <td>{{inc index}}</td>
              <td>{{m.name}}</td>
              <td>{{m.registerNumber}}</td>
              <td>{{m.department}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class="text-muted">No members enrolled.</p>
  {{/if}}

  <h5 class="mb-3">Admins</h5>

  {{#if course.admins.length}}
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Register No</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          {{#each course.admins as |a index|}}
            <tr>
              <td>{{inc index}}</td>
              <td>{{a.name}}</td>
              <td>{{a.registerNumber}}</td>
              <td>{{a.department}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class="text-muted">No admins assigned.</p>
  {{/if}}

</div>
