{{#if this.statusMessage}}
  <div class="alert {{this.statusClass}} text-center rounded-0 mb-0">
    {{this.statusMessage}}
  </div>
{{/if}}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm p-4" style="width:360px">

    <h2 class="h4 mb-1">Login</h2>
    <p class="text-muted mb-3">Enter your credentials to continue</p>

    <div class="mb-3">
      <label class="form-label">Username</label>
      {{input value=username class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      {{input value=password type="password" class="form-control"}}
    </div>

    <button class="btn btn-success w-100" disabled={{this.isLoading}} {{action "login" allowedKeys="enter"}}>
      {{if this.isLoading "Logging in..." "Login"}}
    </button>

  </div>
</div>
