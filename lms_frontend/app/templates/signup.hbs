<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm p-4" style="max-width:480px;width:100%">

    <h2 class="h4 mb-1">Sign up</h2>
    <p class="text-muted mb-3">Create an account to access courses</p>

    {{#if error}}
      <div class="alert alert-danger py-2">{{error}}</div>
    {{/if}}

    <div class="mb-3">
      <label class="form-label">Username</label>
      {{input value=username class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Email</label>
      {{input value=email type="email" class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      {{input value=password type="password" class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Role</label>
      <select class="form-select" onchange={{action (mut role) value="target.value"}}>
        <option value="student">Student</option>
        <option value="admin">Admin</option>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Name</label>
      {{input value=name class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Contact</label>
      {{input value=contact class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Department</label>
      {{input value=department class="form-control"}}
    </div>

    <div class="mb-3">
      <label class="form-label">Register Number</label>
      {{input value=registerNumber class="form-control"}}
    </div>

    <button
      class="btn btn-success w-100"
      disabled={{loading}}
      {{action "signup"}}
    >
      {{if loading "Creating account..." "Create Account"}}
    </button>

  </div>
</div>
